<div class="page-header">
  <%= link_to user_path(current_user), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_user_photo_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>

  <h1>Show photo</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @photo.title %></dd>

  <dt>Description:</dt>
  <dd><%= @photo.description %></dd>

  <dt>Image</dt>
  <dd><%= image_tag @photo.image.url(:medium) %></dd>
</dl>
